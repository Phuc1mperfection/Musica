<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#153448"
    tools:context=".MusicPlayerActivity">

    <!-- Layout chứa ảnh và các TextView -->

    <!-- PlayerView và các controls khác -->


    <ImageView
        android:id="@+id/imgSongs"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_above="@+id/controls"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="187dp"
        android:src="@drawable/music_icon_big" />

    <RelativeLayout
        android:id="@+id/songInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controls"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:padding="20dp">

        <!-- ImageView -->


        <!-- TextView cho tên bài hát -->
        <TextView
            android:id="@+id/nameSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Title of the song"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <!-- TextView cho tên nghệ sĩ -->
        <TextView
            android:id="@+id/artistsSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameSongs"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Artist"
            android:textColor="#f2f2f2"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-6dp"
        android:padding="40dp">

        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:hide_on_touch="false"
            app:show_timeout="0" />
    </RelativeLayout>

</RelativeLayout>
